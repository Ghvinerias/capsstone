@model IEnumerable<ToDoList.DataModel.Todolist>



@using todoapp.Views.ViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Create New List</h1>
<h5></h5>


<table class="table">
    <thead>

        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdate)
            </th>
            <th>
                <p>
                    <a asp-action="Create" class="btn btn-success"><i class="far fa-plus-square"></i>New List</a>
                    
                </p>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {


            <tr>
                <td>
                    <div id="sss">:</div>


                    <script>
                        $(Document).ready((function () {
                            var url = "/Todolists/GetCountByStatus";
                            var ListIds = item.id;
                            var StatusId = 1;
                            $.get(url, { ListIds: ListIds, StatusId: StatusId }, function (data) {
                                $("#sss").html("ssssssssssss");
                            })

                        }))
                    </script>




                    @Html.DisplayFor(modelItem => item.Name)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id"><i class="far fa-marker fa-lg"></i>Edit</a>
                    @*<a asp-action="Details" asp-route-id="@item.id"><i class='far fa-building'></i>Details</a>*@
                    <a asp-action="Delete" asp-route-id="@item.id" class="text-danger ml-1" onclick="return confirm('are you sure to delete this record?')"><i class="far fa-trash-alt fa-lg"></i>Delete</a>
                    <a asp-action="Details" asp-route-id="@item.id"><i class='far fa-building'></i></a>@Html.ActionLink("Details", "GetTodoByLIstId", "ToDoes", new { id = item.id })

                </td>

            </tr>

        }
    </tbody>
</table>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>



